@using MarketingAds.Models;
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Status</h5>
            <button type="button" class="btn-close" aria-label="Close" @onclick="HideModal"></button>
        </div>
        <div class="modal-body">
            <RadzenTemplateForm Data="@status" TItem="Status" Submit="@SaveStatus">
                <div class="rz-p-0 rz-p-md-12">
                    <RadzenRow Gap="1rem">
                        <RadzenColumn Size="12">
                            <RadzenStack>
                                <RadzenFormField Text="Status Name:" Variant="Variant.Filled">
                                    <ChildContent>
                                        <RadzenTextBox @bind-Value="status.Name" Name="Name" Style="width: 100%;" />
                                    </ChildContent>
                                    <Helper>
                                        <RadzenRequiredValidator Component="Name" Text="Status name is required." />
                                    </Helper>
                                </RadzenFormField>

                                <RadzenFormField Text="Status ShortForm" Variant="Variant.Filled">
                                    <ChildContent>
                                        <RadzenTextBox @bind-Value="status.ShorForm" Name="ShortForm" Style="width: 100%;"  />
                                    </ChildContent>
                                    <Helper>
                                        <RadzenRequiredValidator Component="ShortForm" Text="Status short form is required." />
                                    </Helper>
                                </RadzenFormField>

                                <RadzenButton Text="Add" ButtonStyle="ButtonStyle.Primary" Type="Submit" />
                            </RadzenStack>
                        </RadzenColumn>

                    </RadzenRow>
                </div>
            </RadzenTemplateForm>

        </div>
    </div>
</div>
@code {
    [Parameter]
    public Status status { get; set; }
    [Parameter]
    public EventCallback HideModal { get; set; }
    [Parameter]
    public EventCallback SaveStatus { get; set; }
    [Parameter]
    public List<Status> allStatus { get; set; }

}
